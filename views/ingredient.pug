doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{name}
        link(rel="stylesheet", href="http://192.168.123.103:8000/css/main.css")
        link(rel="stylesheet", href="http://192.168.123.103:8000/css/ingredient.css")
        link(rel="shortcut icon", href="#", type="image/x-icon")
    body.column
        #nav.row
            div Ingredientes
            div Recetas
            div Precios
        #content.column
            #add_search_getAll.row
                div#add +
                input#search(type="search" placeholder="Buscar...")
                div#getAll Obtener todo
            #form.column
                #delete Borrar
                #cancel +
                input#name(type="text" placeholder="Nombre de Ingrediente")
                input#carbs(type="number" placeholder="Carbohidratos")
                input#protein(type="number" placeholder="Proteinas")
                input#fat(type="number" placeholder="Grasas")
                input#calories(type="number" placeholder="Calorias")
                input#grams_per_unit(type="number" placeholder="Gramos por unidad")
                #submit(data-id="add") aceptar
            #search_results(style="display:grid;")
